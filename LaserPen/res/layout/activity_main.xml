<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.osu.laserpen.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="CLICK TO START LASER PEN"
        android:textColor="#DC143C"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_image4" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/imageButton1"
        android:layout_marginRight="6dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/clearfinalicon" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginLeft="6dp"
        android:background="@drawable/colorfinalicon" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/imageButton2"
        android:text="@string/hello_world" />
        
    <Button 
        android:id="@+id/exposeMeButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set visiblity"
        android:layout_below="@id/msg"
        />
	
     <Button 
        android:id="@+id/scanAroundButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan nearby Bluetooth device"
        android:layout_below="@id/msg"
        android:layout_toRightOf="@id/exposeMeButtonId"
        />
     <TextView
        android:id="@+id/myDeviceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bluetooth is:" 
        />
	
	
</RelativeLayout>